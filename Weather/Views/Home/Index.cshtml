@{
    ViewBag.Title = "Home Page";
    var weatherApi = Model;
    var main = Model.Weather[0].Main.ToString();
}

    
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="weather">
                    <div class="current">
                        <div class="info">
                            <div>&nbsp;</div>
                            <div class="city"><small><small>CITY:</small></small> @weatherApi.Name</div>
                            <div class="temp">@Math.Round(@weatherApi.Main.Temp)&deg;<small>C</small></div>
                            <div class="wind"><small><small>WIND:</small></small> @weatherApi.Wind.Speed m/s</div>
                            <div>&nbsp;</div>
                        </div>
                    </div>
                    <div class="future">
                        @if (main == "Mist" || main == "Fog")
                        {
                            <div class="day">
                                <h3>@main</h3>
                                <p><img src="~/Content/Icons/50d@2x.png" /></p>
                            </div>
                        }
                        else if (main == "Thunderstorm")
                        {
                            <div class="day">
                                <h3>@main</h3>
                                <p><img src="~/Content/Icons/11d@2x.png" /></p>
                            </div>
                        }
                        else if (main == "Drizzle")
                        {
                            <div class="day">
                                <h3>@main</h3>
                                <p><img src="~/Content/Icons/09d@2x.png" /></p>
                            </div>
                        }
                        else if (main == "Rain")
                        {
                            <div class="day">
                                <h3>@main</h3>
                                <p><img src="~/Content/Icons/10d@2x.png" /></p>
                            </div>
                        }
                        else if (main == "Snow")
                        {
                            <div class="day">
                                <h3>@main</h3>
                                <p><img src="~/Content/Icons/13d@2x.png" /></p>
                            </div>
                        }
                        else if (main == "Clear")
                        {
                            <div class="day">
                                <h3>@main</h3>
                                <p><img src="~/Content/Icons/01d@2x.png" /></p>
                            </div>
                        }
                        else if (main == "Clouds")
                        {
                            <div class="day">
                                <h3>@main</h3>
                                <p><img src="~/Content/Icons/01d@2x.png" /></p>
                            </div>
                        }
                        else 
                        {
                            <p>No information</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

